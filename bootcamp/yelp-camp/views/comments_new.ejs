<%- include("partials/header") %>
<div class="row justify-content-around align-items-center mt-5">
  <div class="col-6">
    <h1 class="text-center">Add New Comment</h1>
    <form class="mt-5" action="/campgrounds/<%= camp._id %>/comments" method="post">
      <div class="form-group">
        <textarea class="form-control" name="text" placeholder="Write your comment here..."></textarea>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="author" placeholder="Your Name" />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-success btn-block" type="submit">Save</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>
<%- include("partials/footer") %>
